@model TrabalhoPratico.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Utilizador";
}

<h1>Editar</h1>

<h4>Editar um utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" disabled />
                <label asp-for="UserName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="PrimeiroNome" class="form-control" />
                <label asp-for="PrimeiroNome" class="form-label"></label>
                <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="UltimoNome" class="form-control" />
                <label asp-for="UltimoNome" class="form-label"></label>
                <span asp-validation-for="UltimoNome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NIF" class="form-control" />
                <label asp-for="NIF" class="form-label"></label>
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="DataNascimento" class="form-control" />
                <label asp-for="DataNascimento" class="form-label"></label>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
            @if (Model.ContaAtiva)
            {
                <a asp-action="Desativar" asp-route-id="@Model.Id" class="btn btn-danger">Desativar Conta</a>
            }
            else
            {
                <a asp-action="Ativar" asp-route-id="@Model.Id" class="btn btn-success">Ativar Conta</a>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


